<h1>Bienvenue dans la création d'utilisateurs !</h1>

<div class="container">
  <div class="row">
    <div class="col-3"></div>
      <div class="col-6">
        <div class="form">
          <%= form_tag url_for(action: 'create'), method: "post" do %>
            <div class="form-group">
             <%= label_tag 'Ton nom' %>
             <%= text_field_tag :username, "", class: 'form-control', placeholder: "username" %>
             </div>
            <div class="form-group">
             <%= label_tag 'Ton email' %>
             <%= text_field_tag :email, "", type: 'email', class: "form-control", placeholder: "email" %>
             </div>
            <div class="form-group">
             <%= label_tag 'Ta bio' %>
             <%= text_area_tag :bio, "", class: 'form-control', placeholder: "ta bio" %>
           </div>
             <%= submit_tag "Balance ta life!", class: 'btn btn-primary' %><br>
             <a href =“/”>Retour</a>
         <% end %>
        </div>
      </div>
    <div class="col-3"></div>
  </div>
</div>
